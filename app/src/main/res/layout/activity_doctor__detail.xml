<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Doctor_Detail">

    <RelativeLayout
        android:id="@+id/Doctor_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbarpannel">

        <RelativeLayout
            android:id="@+id/back_relative"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Doctor_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/doctor_image_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_10dp">

                <ImageView
                    android:id="@+id/doctor_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_239dp"
                    android:background="@drawable/curve_corner_image"
                    android:padding="@dimen/size_5dp"
                    android:src="@drawable/one"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doctor_detail_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_image_relative"
                android:layout_marginTop="@dimen/size_20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doctor Details"
                    android:textColor="@color/title_color"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:textSize="@dimen/size_17dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doctorname_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_detail_relative"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/intro_title_color"
                    android:textSize="@dimen/size_14dp"
                    android:text="Doctor Name :"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"/>

                <TextView
                    android:id="@+id/doctorname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/intro_desription_color"
                    android:gravity="right"
                    android:text="Dr.Priyadarshini Desai"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doctor_qualification_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorname_relative"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/intro_title_color"
                    android:textSize="@dimen/size_14dp"
                    android:text="Doctor Qualification :"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"/>

                <TextView
                    android:id="@+id/doctor_qualification_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/intro_desription_color"
                    android:gravity="right"
                    android:text="M.S."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/doctor_type_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_qualification_relative"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/intro_title_color"
                    android:textSize="@dimen/size_14dp"
                    android:text="Doctor Types :"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"/>

                <TextView
                    android:id="@+id/doctor_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/intro_desription_color"
                    android:gravity="right"
                    android:text="Aurthopatic"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/doctor_time_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_type_relative"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/intro_title_color"
                    android:textSize="@dimen/size_14dp"
                    android:text="Doctor Time :"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"/>

                <TextView
                    android:id="@+id/doctor_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/intro_desription_color"
                    android:gravity="right"
                    android:text="12:00 to 5:00"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/booking_date_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_time_relative"
                android:layout_marginTop="@dimen/size_30dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/intro_title_color"
                    android:textSize="@dimen/size_14dp"
                    android:text="Select Date"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:fontFamily="@font/montserratmedium"/>

                <Button
                    android:id="@+id/bookdoctor_pick_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp"
                    android:text="JAN 01 2021"
                    android:textColor="@color/title_color"
                    android:fontFamily="@font/montserratmedium"
                    android:padding="@dimen/size_10dp"
                    android:backgroundTint="@color/similarwhite"
                    android:background="@drawable/edit_text_style"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="@dimen/size_23dp"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_25dp"
                    android:onClick="openDatePicker"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/warningmassage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booking_date_relative"
                android:background="@drawable/warningbox"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_30dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warning :"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:fontFamily="@font/montserratbold"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Press the book appoinment button\nuntil a successful book\nappoinment is made"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_below="@+id/txt1"
                    android:lineSpacingExtra="@dimen/size_5dp"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:fontFamily="@font/montserratmedium"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/warningmassage"
                android:layout_marginTop="@dimen/size_50dp"
                android:layout_marginBottom="@dimen/size_30dp">

                <Button
                    android:id="@+id/bookofdoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_six"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:text="Book Appoiment"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>