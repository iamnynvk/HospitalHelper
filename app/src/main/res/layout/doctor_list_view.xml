<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:id="@+id/cardView">

    <RelativeLayout
        android:id="@+id/doctor_list_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_image"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:src="@drawable/profile_photo"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/intro_desription_color"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"/>

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/doctor_image"
            android:layout_marginTop="@dimen/size_25dp"
            android:text="Doctor Name"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"/>

        <TextView
            android:id="@+id/doctor_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/doctor_image"
            android:layout_below="@+id/doctor_name"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_7dp"
            android:text="Qualification"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/doctor_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/doctor_image"
            android:layout_below="@+id/doctor_qualification"
            android:layout_marginTop="@dimen/size_7dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="Type"
            android:textColor="@color/title_color"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/montserratregular"/>

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_image"
            android:layout_marginTop="@dimen/size_18dp"
            android:text="Time"
            android:layout_marginStart="@dimen/size_20dp"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/intro_title_color"
            android:textSize="@dimen/size_15dp"/>

        <TextView
            android:id="@+id/doctor_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:00 to 5:00"
            android:layout_below="@+id/doctor_image"
            android:gravity="right"
            android:layout_marginTop="@dimen/size_18dp"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:fontFamily="@font/montserratregular"
            android:textColor="@color/intro_desription_color"
            android:textSize="@dimen/size_13dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lines"
            android:layout_below="@+id/doctor_time"
            android:layout_marginRight="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_7dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>